<UserControl
    x:Class="NestedWorld.View.ChatViews.YouMessageTemplate"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NestedWorld.View.ChatViews"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="150"
    Width="325">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>
        <Rectangle Fill="{StaticResource BleuTwoBrush}"/>
        <StackPanel Orientation="Vertical">
            <TextBlock Text="{Binding Path=content}" Margin="5" Foreground="{StaticResource DarkApplicationbackgroundBrush}"/>
            <TextBlock Text="{Binding Path=time}" HorizontalAlignment="Right" Margin="5" Foreground="{StaticResource DarkApplicationbackgroundBrush}"/>
        </StackPanel>
        <Polygon HorizontalAlignment="Left" Grid.Row="1" Points="-3,0 10,10 10,0" Fill="{StaticResource BleuTwoBrush}" Stroke="{StaticResource BleuTwoBrush}" RenderTransformOrigin="0.5,0.5">
            <Polygon.RenderTransform>
                <CompositeTransform ScaleX="-1"/>
            </Polygon.RenderTransform>
        </Polygon>
    </Grid>
</UserControl>
